<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>
            {% block title %}Tus Mascotas!{% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
            <link rel="stylesheet" href="{{ asset('login.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body>
        <main class="form-signin">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">
                <div class="text-center">
                    <img class="mb-4" src="{{ asset('house-door.svg') }}" width="72" height="57">
                    <h1 class="h3 mb-3 fw-normal">Tus Mascotas</h1>
                </div>
                <label for="inputEmail" class="visually-hidden">{{ 'Username'|trans }}</label>
                <input type="text" id="inputEmail" class="form-control" placeholder="{{'Username'|trans}}" required="" autofocus="" name="_username" value="{{ last_username }}"/>
                <label for="inputPassword" class="visually-hidden">Password</label>
                <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="" name="_password"/>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="w-100 btn btn-lg btn-primary" type="submit">{{ 'Login'|trans }}</button>
                <p class="mt-5 mb-3 text-muted">Â© 2017-{{'now'|date('Y')}}</p>
            </form>
        </main>
    </body>
</html>
