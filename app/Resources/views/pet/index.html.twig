{% extends 'base.html.twig' %}

{% block body %}
    {% include 'title.html.twig' with {} only %}
    <h2>{{ 'Pets list'|trans }}</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>{{ 'Chip' | trans }}</th>
                    <th>{{ 'Firstname' | trans }}</th>
                    <th>{{ 'Type' | trans }}</th>
                    <th>{{ 'Gender' | trans }}</th>
                    <th>{{ 'Kind' | trans }}</th>
                    <th>{{ 'Birthdate' | trans }}</th>
                    <th>{{ 'Steril' | trans }}</th>
                    <th>{{ 'Actions' | trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for pet in pets %}
                <tr>
                    <td><a href="{{ path('pet_show', { 'id': pet.id }) }}">{{ pet.chip }}</a></td>
                    <td>{{ pet.firstname }}</td>
                    <td>{{ pet.type }}</td>
                    <td>{{ pet.gender }}</td>
                    <td>{{ pet.kind }}</td>
                    <td>{% if pet.birthdate %}{{ pet.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if pet.steril %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('pet_show', { 'id': pet.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('pet_edit', { 'id': pet.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <ul>
        <li>
            <a href="{{ path('pet_new') }}">Create a new pet</a>
        </li>
    </ul>
{% endblock %}
