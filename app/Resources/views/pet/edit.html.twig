{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Pet edit'|trans }} - <span class="text-muted">Chip {{ pet.chip }}</span></h1>
    <a href="{{ path('pet_index') }}">{{ 'Back to the list' | trans }}</a>

    <div class="my-4">
        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <input type="submit" value="{{ 'Edit'|trans }}"  class="btn btn-primary">
        {{ form_end(edit_form) }}
        <hr>
        {{ form_start(delete_form) }}
            <input type="submit" value="{{ 'Delete'|trans }}" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
